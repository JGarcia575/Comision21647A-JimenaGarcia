<head>
    <%- include("partials/head")%>
</head>
<body>
    <%- include("partials/nav")%>
    <div class="posts my-2">
        <h1 class="m-2 fs-2">Lista de posteos</h1>
        <a href="/crear" class="btn btn-success ms-3">
            <i class="bi bi-upload px-3"></i>
        </a>
        <!-- <button class="btn btn-outline-light ms-3">
            <i class="bi bi-plus fs-2 px-3"></i>
            </button>
        -->        
    </div>
    <!--Tabla con los posts-->            
    <table class="table table-info">
        <thead class="table-group-divider">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">TITULO</th>
                <th scope="col">CONTENIDO</th>
                <th scope="col">IMAGEN</th>
                <th scope="col">FECHA DE CREACION</th>
                <th scope="col">ACCIONES</th>
            </tr>
        </thead>
        <% resultado.forEach((post) =>{ %>
        <tbody class="table-group-divider">
            <tr>
                <td><%= post.id %></td>
                <td><%= post.titulo %></td>
                <td><%= post.contenido %></td>
                <td><img src="<%= post.url_imagen %>"  alt="imagen subida por el usuario" style="height: 100px; width: 100px;"></td>
                <td><%= post.createdAt %></td>
                <td>
                    <div class="btn-group" role="group" aria-label="botones de edición y eliminación de la información">
                        <button class="btn btn-primary"><i class="bi bi-pencil"></i></button>
                        <button class="btn btn-danger"><i class="bi bi-trash"></i></button>
                    </div>
                </td>
            </tr>
        </tbody>
        <% }) %>
    </table>
